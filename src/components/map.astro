---
import { Leaflet } from 'astro-leaflet'

export interface Props {
  text?: string
  loc: [number, number]
  zoom: number
}

const { text, loc, zoom } = Astro.props
---

<Leaflet
  options={{
    tileByName: 'OSM',
    center: loc,
    zoom: zoom,
    markers: [{ latlng: loc, options: { title: text } }]
  }}
/>
